<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @video.name %>
</p>

<p>
  <b>Description:</b>
  <%= @video.description %>
</p>

<p>
  <b>Author:</b>
  <%= @video.author %>
</p>
<p>
  <b>Movie:</b>
  <video id="the_video" class="video-js vjs-default-skin" controls
         preload="auto" width="640" height="480" poster="<%= @video.movie_url(:png) %>"
         data-setup="{}">
    <source src="<%= @video.movie_url(:mp4) %>" type='video/mp4'>
  </video>
</p>

<%= link_to 'Edit', edit_video_path(@video) %> |
